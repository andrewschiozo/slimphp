        "slim/slim": "4.*",
        "slim/psr7": "^1.7",
        "slim/php-view": "^3.4",
        "illuminate/database": "^11.42"
    },
    "autoload": {
        "psr-4": {
            "src\\": "src/"
        }
    },
    "scripts": {
        "dev": "php -S localhost:8080 -t public"
